<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PieView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="startAngle" format="integer"/>
        <attr name="drawTrack" format="boolean"/>
        <attr name="trackColor" format="color"/>
        <attr name="trackAlpha" format="float"/>
        <attr name="strokeEnd" format="enum">
            <enum name="flat" value="2" />
            <enum name="round" value="1" />
        </attr>
        <attr name="trackWidth" format="dimension"/>
        <attr name="drawDividers" format="boolean"/>
        <attr name="dividerWidth" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PieViewLegend">
        <attr name="legendOrientation" format="enum">
            <enum value="0" name="vertical"/>
            <enum value="1" name="horizontal"/>
        </attr>
        <attr name="drawLegendLabel" format="boolean"/>
        <attr name="legendTextSize" format="dimension"/>
        <attr name="legendTextColor" format="color"/>
        <attr name="legendShape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>
        <attr name="shapeCornerRadius" format="dimension"/>
        <attr name="shapeSize" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
        <attr name="horizontalSpacing" format="dimension"/>

        <attr name="drawLegendValue" format="boolean"/>
        <attr name="legendValueTextFormat" format="enum">
            <enum name="percent" value="0"/>
            <enum name="value" value="1"/>
            <enum name="decimal_percent" value="2"/>
        </attr>
        <attr name="legendOrder" format="enum">
            <enum name="shapeFirst" value="0"/>
            <enum name="labelFirst" value="1"/>
        </attr>

    </declare-styleable>

</resources>